@model List<UI.Customer.Models.Course>

@{
    ViewData["Title"] = "Ödeme";
    var totalPrice = Model.Any() ? Model.Sum(c => c.Price) : 0;
}

<div class="container mt-5" style="max-width:700px;">
    <h2 class="mb-4 text-center text-primary fw-bold">💳 Ödeme İşlemi</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Message"]</div>
    }

    <!-- 🛒 Sepet İçeriği -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light fw-bold">🛍 Sepetiniz</div>
        <ul class="list-group list-group-flush">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <strong>@item.Title</strong>
                            <small class="text-muted">(@item.Instructor)</small>
                        </span>
                        <span class="fw-bold text-success">@item.Price ₺</span>
                    </li>
                }

                <!-- ✅ Toplam -->
                <li class="list-group-item d-flex justify-content-between">
                    <strong>Toplam</strong>
                    <span class="fw-bold text-primary">@totalPrice ₺</span>
                </li>
            }
            else
            {
                <li class="list-group-item text-muted text-center">Sepetiniz boş.</li>
            }
        </ul>
    </div>

    <!-- 💳 Ödeme Formu -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" asp-action="Checkout" asp-controller="Cart">
                <div class="mb-3">
                    <label class="form-label">Kart Üzerindeki İsim</label>
                    <input type="text" class="form-control" name="cardName" placeholder="Ad Soyad" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Kart Numarası</label>
                    <input type="text" class="form-control" name="cardNumber" maxlength="16" placeholder="**** **** **** ****" required />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Son Kullanma Tarihi (MM/YY)</label>
                        <input type="text" class="form-control" name="expiry" placeholder="12/25" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">CVV</label>
                        <input type="text" class="form-control" name="cvv" maxlength="3" placeholder="123" required />
                    </div>
                </div>

                <button type="submit" class="btn btn-success w-100 btn-lg">
                    ✅ Satın Al ve Ödemeyi Tamamla
                </button>
            </form>
        </div>
    </div>
</div>
