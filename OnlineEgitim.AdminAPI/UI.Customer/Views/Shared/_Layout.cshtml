@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@{
    var userName = User.Identity?.Name;
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduTube</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    @RenderSection("Styles", required: false)
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-info" asp-controller="Home" asp-action="Index">
                    🎓 EduTube
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Sol Menü -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Course" asp-action="Index">
                                <i class="bi bi-book"></i> Courses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i> Sepetim
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Profile" asp-action="Index">
                                <i class="bi bi-person"></i> Profilim
                            </a>
                        </li>

                        @if (userRole == "Admin")
                        {
                            <!-- Admin Paneli Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" id="adminDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock"></i> Admin Paneli
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                            📊 Dashboard
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                            👥 Kullanıcı Yönetimi
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="AdminPurchase" asp-action="Index">
                                            💳 Satın Alınanlar
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="AddCourse">
                                            ➕ Kurs Ekle
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="ManageCourses">
                                            🗑️ Kurs Yönetimi
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Sağ Menü -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white">👋 Merhaba, @userName</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-key"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-pencil-square"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 bg-dark text-white">
        <div class="container text-center">
            &copy; 2025 - EduTube | <a class="text-info" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
