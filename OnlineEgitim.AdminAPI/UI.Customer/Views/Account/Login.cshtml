@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center text-primary mb-4">🔑 EduTube - Giriş Yap</h3>

                    @* ✅ TempData mesajları *@
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    @* ✅ ModelState hataları *@
                    @if (!ViewData.ModelState.IsValid)
                    {
                        foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div class="alert alert-danger">@error.ErrorMessage</div>
                        }
                    }

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">E-Posta</label>
                            <input type="email" name="email" class="form-control" placeholder="ornek@mail.com" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Şifre</label>
                            <input type="password" name="password" class="form-control" placeholder="••••••" required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                    </form>

                    <hr />
                    <p class="text-center">Hesabın yok mu? <a href="/Account/Register">Kayıt Ol</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

